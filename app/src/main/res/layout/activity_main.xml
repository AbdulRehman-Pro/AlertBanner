<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.rehman.view.AlertBanner
        android:id="@+id/alertBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bannerAnimate="top_to_bottom"
        app:bannerBackgroundColor="#FFEBEE"
        app:bannerFontFamily="@font/montserrat_bold"
        app:bannerIconSize="@dimen/_12sdp"
        app:bannerSurfaceColor="#F44336"
        app:bannerTextSize="@dimen/_8ssp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#D3D3D3"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.rehman.view.AlertBanner
        android:id="@+id/alertBanner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bannerAnimate="bottom_to_top"
        app:bannerFontFamily="@font/montserrat_bold"
        app:bannerIconSize="@dimen/_12sdp"
        app:bannerTextSize="@dimen/_6ssp" />


</LinearLayout>